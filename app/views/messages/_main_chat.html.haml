.Main_chat
  .Main_chat__Header
    .header-text
      .header-test 
        = @group.name
        .header-member
          Member :
          - @group.users.each do |user_name|
            = user_name.name
    .header-edit
      = link_to edit_group_path(@group), class: "header-edit" do
        Edit
    
    
  .Main_chat__Main
    = render @messages


  .Main_chat__Message_form
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .input-box
        = f.text_field :body, class: "input-box__text", placeholder: "type a message"
        = f.label :image, class: 'input-box__image' do
          =icon('fas','image')
          = f.file_field :image, class: 'input-box__image__file' 
      = f.submit "Send", class: "submit-btn" 


