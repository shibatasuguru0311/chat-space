.Side_bar
  .Side_bar__Name
    .Top_items
      .Top_items__Name 
        =current_user.name
      .Top_items__Icons
        = link_to new_group_path, class: "Top_items__Icons_edit" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "Top_items__Icons_cog" do
          = icon('fas', 'cog')

      
  .Side_bar__Group_list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          %p.group-name
            = group.name
          %p.tweet
            = group.show_last_message
